@model AppUserLoginDto
@{
    if (@ViewBag.IsSuccess!=null)
    {
        if (@ViewBag.IsSuccess)
        {

            <span class="badge bg-success">Başardın hımmına</span>
        }
        else
        {
            <span class="badge bg-danger">başaramadın hımmına</span>
        }
    }
}

<form asp-action="Login" method="post">
    <input asp-for="UserName" placeholder="username gir bakem"/>
    <input asp-for="Password" placeholder="password gir bakem"/>
    <input asp-for="KeepMeLoggedIn"/>
    <button type="submit">Girişle</button>
</form>