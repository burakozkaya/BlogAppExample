@model UserUpdateModel

@{
    var item = @Model;
}

@if (TempData["ErrorMessage"] != null)
{
    <p class="alert alert-danger">@TempData["ErrorMessage"].ToString()</p>
}

@if (TempData["SuccessMessage"] != null)
{
    <p class="alert alert-success">@TempData["SuccessMessage"].ToString()</p>
}

<div class="container">
    <div class="row">
        <form asp-action="UpdateUser" method="post">
            <div class="col-12">
                <b>User Id</b>
                <input type="hidden" name="Id" asp-for="@Model.Id" />
            </div>
            <br />
            <div class="col-12">
                <b>Name</b>
                <input type="text" name="Name" asp-for="@item.Name" />
            </div>
            <br />
            <div class="col-12">
                <b>SurName</b>
                <input type="text" name="SurName" asp-for="@item.SurName" />
            </div>
            <br />
            <button class="btn btn-warning" type="submit">Update</button>
        </form>
    </div>
    <br />
</div>
