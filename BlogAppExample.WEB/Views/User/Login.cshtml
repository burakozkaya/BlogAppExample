@model AppUserLoginDto
<div class="container">
    <div class="row">
        <div class="col-6">
            <form asp-action="Login" method="post" class="p-3">
                @{
                    if (@ViewBag.IsSuccess != null)
                    {
                        if (@ViewBag.IsSuccess)
                        {
                            <span class="badge bg-success">@ViewBag.Message.ToString()</span>
                        }
                        else
                        {
                            <span class="badge bg-danger">@ViewBag.Message.ToString()</span>
                        }
                    }
                }
                <div class="mb-3">
                    <label asp-for="UserName" class="form-label">Username</label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <input asp-for="Password" class="form-control" type="password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-3 form-check">
                    <label class="form-check-label" for="KeepMeLoggedIn">Keep me logged in</label>
                    <input asp-for="KeepMeLoggedIn" class="form-check-input" id="KeepMeLoggedIn" />
                </div>
                <button type="submit" class="btn btn-primary">Login</button>
            </form>
        </div>
    </div>
</div>
