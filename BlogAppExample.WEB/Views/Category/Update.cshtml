@model CategoryDTO

@{
    var item = Model;
}

@if (TempData["ErrorMessage"] != null)
{
    <p class="alert alert-danger">@TempData["ErrorMessage"].ToString()</p>
}
@{
    @if (TempData["SuccessMessage"] != null)
    {
        <p class="alert alert-danger">@TempData["SuccessMessage"].ToString()</p>
    }
}

<a class="btn btn-outline-primary" asp-controller="Blog" asp-action="Insert"> New Blog</a>

<div class="container">
    <div class="row">
        <form asp-action="Update" asp-route-id="@item.Id" method="post">
            <div class="col-12">
                <b>Category Id</b>
                <input type="hidden" name="Id" value="@item.Id" />
            </div>
            <br />
            <div class="col-12">
                <b>Category Name</b>
                <input type="text" name="CategoryName" value="@item.CategoryName" />
            </div>
            <br />
            <div class="col-12">
                <b>Category Description</b>
                <input type="text" name="CategoryDescription" value="@item.CategoryDescription" />
            </div>
            <br />
            <button class="btn btn-warning" type="submit">Update</button>
        </form>
    </div>
    <br />
</div>
@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}