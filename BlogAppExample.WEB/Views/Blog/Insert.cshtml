@model BlogContentDTO

<form asp-action="Insert" method="post" class="p-4 border rounded shadow-sm bg-light">
    <h3 class="text-center mb-4">Add Blog Content</h3>

    <div class="mb-3">
        <label for="Title" class="form-label">Title</label>
        <input asp-for="Title" class="form-control" placeholder="Enter title" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="mb-7">
        <label for="Content" class="form-label">Content</label>
        <textarea asp-for="Content" class="form-control" placeholder="Enter content"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label for="CategoryId" class="form-label">Category</label>
        <select asp-for="CategoryId" asp-items="@ViewBag.CategoryList" class="form-select">
            <option selected>Choose a category</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>
    <div class="mb-7">
        <label for="MinuteDurationForRead" class="form-label">Content</label>
        <textarea asp-for="MinuteDurationForRead" class="form-control" placeholder="Enter minute duration for read"></textarea>
        <span asp-validation-for="MinuteDurationForRead" class="text-danger"></span>
    </div>

    <div class="text-center">
        <button type="submit" class="btn btn-primary">EKle</button>
    </div>
</form>
@section Scripts
    {
    <partial name="_ValidationScriptsPartial" />
}
